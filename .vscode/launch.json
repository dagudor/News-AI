{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch .NET Core API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/NewsAI/bin/Debug/net9.0/NewsAI.dll",
      "args": [],
      "cwd": "${workspaceFolder}/NewsAI",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}